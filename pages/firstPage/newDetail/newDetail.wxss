.content {
  display: flex;
  flex-direction: column;
}

.content-top {
  position: relative;
}

.top-image {
  width: 100%;
  height: 420rpx;
}

.audio {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -15px;
  margin-top: -15px;
  z-index: 100;
  opacity: 0.6;
}

.sub-title {
  flex-direction: row;
  margin: 0px 10px;
}

.icon {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  vertical-align: middle;
  margin-right: 30px;
}

.name {
  font-weight: bold;
  font-size: 17px;
  margin-right: 30px;
}

.date {
  font-size: 14px;
}

.title {
  margin: 5px 0px 5px 10px;
  font-weight: bold;
  font-size: 23px;
}

.content-mid {
  margin: 10px;
  position: relative;
}
.content-mid image{
 width: 40px;
  height: 40px;
}

.first {
  position: absolute;
  right: 10px;
  top: 50%;
  margin-top: -20px;
}



.last{
    position: absolute;
  right: 70px;
  top: 50%;
  margin-top: -20px;
  
}

.content-mid view {
  width: 100%;
  height: 1px;
  position: absolute;
  top: 50%;
  z-index: -1;
  background-color: #ccc;
}

.content-text {
  margin: 10px;
  color: #ccc;
  font-size: 14px;
}
